<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="#d6e1ff77"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d6e1ff77">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView"
                    android:background="#FFFFFFFF">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:id="@+id/tblLayout">

                    </TableLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="30"
                        android:id="@+id/textView1k"
                        android:layout_gravity="center"
                        android:background="#48b08b"
                        android:gravity="center_vertical|center_horizontal" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="0"
                        android:id="@+id/textView50"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#cec059" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="20"
                        android:id="@+id/textView20"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#bd5043" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="10"
                        android:id="@+id/textView10"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#698ca5" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="10"
                        android:id="@+id/textView5"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="#ab8abc" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d6e1ff77">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="7">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/textViewInput"
                    android:textAlignment="textEnd"
                    android:textSize="38sp"
                    android:elegantTextHeight="false"
                    android:layout_gravity="center_vertical"
                    android:textIsSelectable="false"
                    android:gravity="center_vertical|right"
                    android:background="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewOutput"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:background="#ffffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textViewMarkup"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:scrollbars="vertical"
                    android:maxLines = "20"
                    android:scrollIndicators="left"
                    android:layout_weight="8" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:background="#ffffff">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Cheques\n0"
                                android:id="@+id/textViewCheques"
                                android:gravity="center|fill_vertical"
                                android:textSize="10dp"
                                android:background="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Payout\n0"
                                android:id="@+id/textViewPayouts"
                                android:gravity="center|fill_vertical"
                                android:textSize="10dp"
                                android:background="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Expences\n0"
                                android:id="@+id/textViewExpence"
                                android:textSize="10dp"
                                android:gravity="center|center_vertical"
                                android:background="#ffffff" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Total Jobs\n0"
                                android:id="@+id/textViewJobs"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:background="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Float\n30550"
                                android:textSize="10dp"
                                android:gravity="center"
                                android:id="@+id/textViewFloat" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Onhand\n35000"
                                android:id="@+id/textViewOnHand"
                                android:gravity="center"
                                android:textSize="10dp"
                                android:background="#ffffff" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="#000000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="6">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonClear"
                android:layout_weight="1"
                android:text="C"
                android:textColor="#ff0000"
                android:textSize="@dimen/ButtonText10"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonInc"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="\u2b06"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonDec"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="\u2b07"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/btnTest"
                android:layout_weight="1"
                android:textSize="12dp"
                android:text="Refresh"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    style="ndroid:style/ButtonBar"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/button70"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonBS"
                    android:text="&lt;"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/button0"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="!"
                    android:id="@+id/buttonSetting"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/buttonDot"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Info"
                    android:id="@+id/buttonInfo"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:background="@android:color/holo_blue_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/buttonPlus"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="++"
                    android:id="@+id/buttonMultiPlus"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonExp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Expence"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonFloat"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Float"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonReset"
                    android:text="Reset"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:longClickable="true"
                    android:background="@android:color/holo_red_dark"
                    android:layout_marginBottom="1dp"
                    android:textColor="#fffbd7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
