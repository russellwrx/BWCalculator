<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- The main content view -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="#d6e1ff77"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#d6e1ff77">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView"
                    android:background="#FFFFFFFF">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:id="@+id/tblLayout">

                    </TableLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ffffff">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/textViewInput"
                    android:textAlignment="textEnd"
                    android:textSize="40sp"
                    android:elegantTextHeight="false"
                    android:layout_gravity="center_vertical"
                    android:textIsSelectable="true"
                    android:gravity="center_vertical|right"
                    android:background="#ffffff"
                    android:paddingRight="16dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="right">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/textViewOutput"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_weight="2"
                    android:background="#ffffffff"
                    android:paddingRight="16dp"
                    android:textSize="30sp"
                    android:textIsSelectable="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/textViewMarkup"
                    android:background="#ffffff"
                    android:gravity="right"
                    android:scrollbars="vertical"
                    android:maxLines = "20"
                    android:scrollIndicators="left"
                    android:layout_weight="1"
                    android:paddingRight="16dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:id="@+id/buttonBS"
                    android:background="@android:drawable/ic_input_delete"
                    android:allowUndo="false"
                    android:backgroundTint="@android:color/black"
                    android:layout_weight="2"
                    android:layout_marginRight="16dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#dedede">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Float\n30550"
            android:textSize="10dp"
            android:gravity="center"
            android:id="@+id/textViewFloat"
            android:layout_weight="1"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Total Jobs\n0"
            android:id="@+id/textViewJobs"
            android:gravity="center"
            android:textSize="10dp"
            android:background="#ffffff"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Cheques\n0"
            android:id="@+id/textViewCheques"
            android:gravity="center|fill_vertical"
            android:textSize="10dp"
            android:background="#ffffff"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Payout\n0"
            android:id="@+id/textViewPayouts"
            android:gravity="center|fill_vertical"
            android:textSize="10dp"
            android:background="#ffffff"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Expences\n0"
            android:id="@+id/textViewExpence"
            android:textSize="10dp"
            android:gravity="center|center_vertical"
            android:background="#ffffff"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Onhand\n35000"
            android:id="@+id/textViewOnHand"
            android:gravity="center"
            android:textSize="10dp"
            android:background="#ffffff"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#000000">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="6">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonClear"
                android:layout_weight="1"
                android:text="C"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/ButtonText10"
                android:background="@color/LightGrey"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonInc"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="\u2b06"
                android:background="@color/LightGrey"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/buttonDec"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="\u2b07"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="@color/LightGrey" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="++"
                android:id="@+id/buttonMultiPlus"
                android:layout_weight="1"
                android:textSize="@dimen/ButtonText"
                android:background="@color/LightGrey"
                android:layout_marginBottom="1dp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_marginTop="1dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/button1"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    style="ndroid:style/ButtonBar"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:color/background_light"
                    android:id="@+id/buttonSetting" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:id="@+id/button5"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/button0"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:id="@+id/button3"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/button6"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/buttonDot"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/background_light"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/buttonPlus"
                    android:layout_weight="1"
                    android:textSize="@dimen/ButtonText"
                    android:background="@android:color/holo_green_dark"
                    android:layout_marginBottom="1dp"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonExp"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="expense"
                    android:background="@color/LightGrey"
                    android:layout_marginBottom="1dp"
                    android:textColor="#080043" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonFloat"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:text="Float"
                    android:background="@color/LightGrey"
                    android:layout_marginBottom="1dp"
                    android:textColor="@android:color/holo_orange_dark" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonReset"
                    android:text="Reset"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:longClickable="true"
                    android:background="@color/LightGrey"
                    android:layout_marginBottom="1dp"
                    android:textColor="@android:color/holo_red_dark" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />
    <!-- The navigation drawer -->
    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <ListView android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#111"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"

                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="30"
                    android:id="@+id/textView1k"
                    android:layout_gravity="center"
                    android:background="#48b08b"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="0"
                    android:id="@+id/textView50"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#cec059" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="20"
                    android:id="@+id/textView20"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#bd5043" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10"
                    android:id="@+id/textView10"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#698ca5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10"
                    android:id="@+id/textView5"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="#ab8abc" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="#111">
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>